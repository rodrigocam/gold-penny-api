{% extends "users/base.jinja2" %}
{% block content %}
    <div class="panel panel-info">
        <div class="panel-heading">Evento</div>
        <div id="event-info" class="panel-body">
            <h1 class='event-name'>{{ event }}</h1>
            <p class='event-date'> {{ event.date.strftime('%d/%m/%Y') }} </p>
        </div>
    </div>
    <div class="panel panel-info">
        <div class="panel-heading">Vendas</div>
        <div id="earnings" class="panel-body">
            <h2>Total Vendido </h2>
            <h4> {{ total_earnings }} </h4>
        </div>
    </div>
    <div class="panel panel-info">
        <div class="panel-heading">Produtos</div>
        <div id="products" class="panel-body">
            <h2>Fichas Vendidas</h2>
            <div class="table-condensed">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Produto</th>
                            <th>Quantidade</th>
                            <th>Subtotal</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for product in products_sold %}
                            <tr>
                                <td>{{ product }}</td>
                                <td>{{ product.total_sold }}</td>
                                <td>{{ (product.total_sold * product.price)|currency }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div> 
        </div>
    </div>
{% endblock %}